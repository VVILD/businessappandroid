<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/previousAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frame_container"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/blue"
            android:text="Previously saved addresses"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/AddressLine1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:background="@drawable/border_blue"
                android:gravity="center"
                android:hint="Address Line 1"
                android:text=""
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#e4e4e4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/AddressLine2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:background="@drawable/border_blue"
                android:gravity="center"
                android:hint="Address Line 2"
                android:text=""
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#e4e4e4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <EditText
                android:id="@+id/City"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="50"
                android:background="@drawable/border_blue"
                android:gravity="center"
                android:hint="City"
                android:text=""
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#e4e4e4" />

            <EditText
                android:id="@+id/State"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="50"
                android:background="@drawable/border_blue"
                android:gravity="center"
                android:hint="State"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="#e4e4e4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <EditText
                android:id="@+id/Pincode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="50"
                android:singleLine="true"
                android:background="@drawable/border_blue"
                android:gravity="center"
                android:hint="Pincode"
                android:text=""
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="#e4e4e4" />

            <EditText
                android:id="@+id/Country"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="50"
                android:background="@drawable/border_blue"
                android:gravity="center"
                android:hint="Country"
                android:text=""
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#e4e4e4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <CheckBox
                android:id="@+id/check0"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="50"
                android:background="@drawable/radiobg"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="4dp"
                android:text="Save this address" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>